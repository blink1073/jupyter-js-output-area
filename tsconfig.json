{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "outDir": "./lib/",
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./src/i-output-area.ts",
        "./src/i-output.ts",
        "./src/output-area.ts",
        "./src/output-provider.ts",
        "./src/typings/transformime.d.ts"
    ]
}
